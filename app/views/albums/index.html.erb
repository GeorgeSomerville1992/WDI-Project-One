<h1>Listing albums</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Artwork</th>
    <th>Date created</th>
    <th>Date updated</th>
    <th colspan="3">Action</th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.name %></td>
    <td><img src="<%= album.file.url %>" width="100px" height="100px"</td>
    <td><%= album.date_created %></td>
    <td><%= album.date_updated %></td>
    <td><%= link_to 'Show', album %></td>
    <% if can? :edit, Album %>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <% end %> 
    <% if can? :destroy, Album %>
         <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if can? :edit, Album %>
<%= link_to 'New Album', new_album_path %>
<% end %> 