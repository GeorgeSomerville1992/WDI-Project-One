<% if @user.errors.any? %>
  <div class="error-messages">
    <h2>Form is invalid</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>New user</h1>

<%= render 'form' %>

